{
  "name": "overscope",
  "version": "0.0.6",
  "description": "React Hooks over Contexts state-management toolkit",
  "author": "Maxim Savin <MkSavin> (mksavin@mail.ru)",
  "contributors": [
    {
      "name": "Maxim Savin",
      "url": "https://mksavin.ru/"
    }
  ],
  "keywords": [
    "react",
    "hooks",
    "contexts",
    "state",
    "toolkit",
    "reducer",
    "immutable"
  ],
  "main": "lib/index.js",
  "repository": "github:MkSavin/overscope",
  "license": "MIT",
  "files": [
    "lib",
    "!lib/**/*.test.js",
    "!lib/setupTests.d.ts",
    "!lib/setupTests.js",
    "!lib/stories"
  ],
  "dependencies": {
    "fast-deep-equal": "^3.1.3",
    "immer": "^9.0.19 || ^10.0.3"
  },
  "peerDependencies": {
    "react": "^17.0.2 || ^18.2.0",
    "react-dom": "^17.0.2 || ^18.2.0"
  },
  "scripts": {
    "compile": "tsc & babel ./src --out-dir lib --extensions \".ts,.tsx,.js,.jsx\" --source-maps inline --copy-files",
    "test": "tsc & react-scripts test",
    "test-coverage": "tsc & react-scripts test --coverage",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "lint": "eslint ./src",
    "prepublishOnly": "npm run lint & npm run compile"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "typescript": "^4.4.4",
    "react-scripts": "5.0.1",
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.15.0",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.14.7",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.12.1",
    "@elerance/eslint-config-react": "^0.0.1",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-interactions": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/builder-webpack5": "^6.5.16",
    "@storybook/manager-webpack5": "^6.5.16",
    "@storybook/node-logger": "^6.5.16",
    "@storybook/preset-create-react-app": "^4.1.2",
    "@storybook/react": "^6.5.16",
    "@storybook/testing-library": "^0.0.13",
    "@testing-library/dom": "^9.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.12",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "babel-plugin-named-exports-order": "^0.0.2",
    "eslint": "^8.33.0",
    "eslint-find-rules": "^4.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "webpack": "^5.76.0"
  }
}
